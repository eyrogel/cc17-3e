<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="email">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#626262</item>
    </style>

    <style name="password">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#626262</item>
    </style>

    <style name="button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="signup_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#494949</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_material_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark_material_dark</item>
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item> <!--custom animation style-->
    </style>

</resources>