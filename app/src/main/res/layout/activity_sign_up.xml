<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/logo_collab"
        android:layout_width="238dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="89dp"
        android:background="@drawable/logo_collab" />

    <RelativeLayout
        android:id="@+id/input1"
        android:layout_width="345dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/logo_collab"
        android:layout_marginBottom="-108dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/input">


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@null"
            android:ems="10"
            android:layout_marginStart="15dp"
            android:hint="Enter name"
            android:inputType="textPersonName" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/input2"
        android:layout_width="345dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/logo_collab"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="-183dp"
        android:background="@drawable/input">


        <EditText
            android:id="@+id/idNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@null"
            android:digits="0123456789-"
            android:ems="10"
            android:layout_marginStart="15dp"
            android:hint="Enter ID number"
            android:inputType="number" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/input3"
        android:layout_width="345dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/logo_collab"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="-257dp"
        android:background="@drawable/input"
        tools:ignore="DuplicateIds">

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@null"
            android:ems="10"
            android:layout_marginStart="15dp"
            android:hint="Enter email"
            android:inputType="textEmailAddress" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/input4"
        android:layout_width="345dp"
        android:layout_height="64dp"

        android:layout_below="@+id/logo_collab"
        android:layout_marginStart="25dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/input"
        tools:ignore="DuplicateIds">

        <EditText
            android:id="@+id/password_signup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@null"
            android:ems="10"
            android:layout_marginStart="15dp"
            android:hint="Enter password"
            android:inputType="textPassword" />
    </RelativeLayout>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/logo_collab"
        android:layout_marginStart="77dp"
        android:layout_marginBottom="-409dp"
        android:background="@drawable/button"
        android:elevation="20dp"
        android:gravity="center_vertical|center"
        android:text="@string/signup"
        android:textAppearance="@style/button" />

    <Button
        android:id="@+id/signin_button"
        android:layout_width="300dp"
        android:layout_height="41dp"
        android:layout_alignBottom="@+id/signup_button"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="-60dp"
        android:background="@drawable/signup_button"
        android:gravity="center_horizontal|top"
        android:text="@string/have_account"
        android:textAppearance="@style/signup_button" />

</RelativeLayout>